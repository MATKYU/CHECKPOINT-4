{% extends 'base.html.twig' %}

{% block title %}
	{{ parent() }}
	| Bestiaires
{% endblock %}

{% block body %}
	{% include 'components/_header2.html.twig' %}

	<main class="container d-flex justify-content-center flex-column">
		<div class="corner my-5">
			<h2 class="text-center text-light">
				<font color="#ffd99c">Bestiaires</font>
			</h2>

			<div class="row justify-content-center">
				<p class="w-75 text-light">
					Lorem ipsum dolor sit amet consectetur adipisicing elit. Reprehenderit, ut nisi distinctio nemo in rem necessitatibus alias! Impedit fugit quam aperiam atque, ea veniam beatae doloribus voluptatum sequi hic numquam.
				</p>
			</div>
		</div>

		<div class="mb-5">
			{% if categories is empty %}
				<p class="text-center mb-5 text-light">Aucune categorie n'est présent ici...</p>
			{% else %}
				<section class="container">
					<div class="row">
						{% for category in categories %}
							<h3 class="text-light text-center mx-auto mt-4 py-1 px-2 mb-3 mx-auto bg-danger">{{ category.name }}</h3>
							{% if category.bestiaries is empty %}
								<p class="text-center mb-5 text-light">Aucuns personnages n'est présent ici...</p>
							{% else %}
								{% include 'components/_card_bestiary.html.twig' %}
							{% endif %}
						{% endfor %}
					</div>
				</section>
			{% endif %}
		</div>
	</main>
	{% include 'components/_banner.html.twig'%}
{% endblock %}
